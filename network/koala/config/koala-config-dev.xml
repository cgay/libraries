<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- This is a version of the configuration file that's more suitable for
     use during development.  Copy it to sources/example/config/koala-config.xml. -->

<koala>

<server-root location="." />

<mime-type-map location="mime-type-map.xml" />

<logfile location="koala.log" />

<port value="8001" />

<document-root location="www" />

<directory pattern = "/"
           allow-directory-listing = "yes" />

<log level="copious" />

<debug-server value="off" />

<auto-register enabled="yes" />

<xml-rpc url="/RPC2" enable="yes" internal-error-fault-code="0" />


<virtual-host name="127.0.0.1">

    <document-root location = "www/127.0.0.1" />

    <!-- For now, all virtual hosts must share the same port, so the
         port here has to match the port for the default vhost.
         This will eventually be fixed. -->

    <port value="8001" />
    <directory pattern = "/"
               allow-directory-listing = "no" />

</virtual-host>
              


</koala>
